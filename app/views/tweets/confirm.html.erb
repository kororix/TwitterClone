<div class = "container">
  <header class = "header">
    <ul class = "top_menu clearfix">
      <li><a href="/tweets/top">TOP</a></li>
      <li><a href="/tweets">つぶやき一覧</a></li>
      <li><a href="/tweets/new">新規つぶやき</a></li>
    </ul>
  </header>
  
<h3>以下の内容で投稿する</h3>

<%= form_with(model: @tweet, url: tweets_path, local: true) do |form| %>
  <%= form.hidden_field :content %>

  <p>つぶやき:<%= @tweet.content %></p>
  <%= form.submit '投稿する' %>
<% end %>

<%= form_with(model: @tweet, url: new_tweet_path, local: true, method: 'get') do |form| %>
  <%= form.hidden_field :content %>
  <%= form.submit 'もどる', name: 'back' %>
<% end %>

<footer class = "footer">
  <p>test application for Pharb</p>
</footer>
</div>
