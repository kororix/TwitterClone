<div class = "container">

  <a class="contents_top">以下の内容で投稿する</a>

  <%= form_with(model: @tweet, url: tweets_path, local: true) do |form| %>
    <%= form.hidden_field :content %>
      <p class="confirm">つぶやき:<%= @tweet.content %></p>
    <%= form.submit '投稿する', class: 'btn btn-success' %>
  <% end %>

<%= form_with(model: @tweet, url: new_tweet_path, local: true, method: 'get') do |form| %>
  <%= form.hidden_field :content %>
  <%= form.submit '投稿せずにもどる', name: 'back', class: 'btn btn-default' %>
<% end %>

</div>
