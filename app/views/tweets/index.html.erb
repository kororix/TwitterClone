<div class = "container">

<a class="contents_top">つぶやき一覧</a>

<p class="notice"><%= notice %></p>

<table>
  <tr>
    <th>つぶやき</th>
  </tr>

<% @tweets.each do |tweet| %>
  <tr>
    <td class="tweet_contents"><%= tweet.content %></td>
    <td class="btn_show">
      <%= form_with(model: @tweet, url: tweet_path(tweet.id), local: true, method: 'get') do |form| %>
        <%= link_to '詳細', tweet_path(tweet.id), class: 'btn btn-info' %>
      <% end %>
    </td>
    <td class="btn_edit">
      <%= form_with(model: @tweet, url: edit_tweet_path(tweet.id), local: true, method: 'get') do |form| %>
        <%= link_to '編集', edit_tweet_path(tweet.id), class: 'btn btn-warning' %>
      <% end %>
    </td>
    <td class="btn_destroy">
      <%= form_with(model: @tweet, local: true, method: 'get') do |form| %>
        <%= link_to '削除', tweet_path(tweet.id), method: :delete, data: { confirm: '本当に削除していいですか？' }, class: 'btn btn-danger' %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

<%= form_with(model: @tweet, local: true, method: 'get') do |form| %>
  <%= link_to '新規投稿', new_tweet_path, class: 'btn btn-success' %>
  <%= link_to 'TOPにもどる', top_tweets_path, class: 'btn btn-default' %>
<% end %>
